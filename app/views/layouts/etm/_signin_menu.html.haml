%fieldset#signin_menu.header_menu
  .menu_arrow
  - @user_session = UserSession.new
  = form_for(@user_session) do |f|
    = f.error_messages
    %p
      = f.label :email, t("user.email")
      %br
      = f.text_field :email
    %p
      = f.label :password, t("user.password")
      %br
      = f.password_field :password

      = link_to t("header.password_reset"), new_password_reset_path

    %p
      = f.label :remember_me, t("user.remember")
      %br
      = f.check_box :remember_me, :checked => "checked"

    = f.submit 'Login', class: 'button primary'

    %span.or= t("or")
    = link_to t("header.create_account"), new_user_path, class: 'button'

