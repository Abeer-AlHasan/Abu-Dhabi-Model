- scenarios.each do |ss|
  - if can_use_as_myc_scenario?(ss)
    %li
      %button{ name: 'scenario_id', value: ss.scenario.id }
        %span.area= t(ss.scenario.area_code)
        %span.title= ss.scenario.title
        %span.end-year== (#{ss.scenario.end_year})

%li#scenario-paginator
  = link_to_next_page scenarios, 'More...', remote: true
