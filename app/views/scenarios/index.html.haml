.scenario_wrapper
  .white-container
    %h3= link_to t("scenario.link"), new_scenario_path
    = form_tag compare_scenarios_path, method: 'get', class: 'scenario-index' do
      %h1 My scenarios
      = submit_tag t('scenario.compare'), class: 'button'
      = submit_tag t('scenario.merge'), name: 'merge', class: 'button'
      = submit_tag t('scenario.local_vs_global'), name: 'combine', class: 'button'
      = render 'scenarios_slice'

      #scenario_paginator
        = link_to_next_page @saved_scenarios, 'More...', remote: true
