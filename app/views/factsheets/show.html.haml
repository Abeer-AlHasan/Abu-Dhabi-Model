#factsheet-pending
  .loading
    = image_tag('layout/ajax-loader-small.gif')
    == #{t('local_global.loading')}&hellip;

#factsheet-content(style="display: none")
  %header
    #title
      %h1
        Energiemix
        %strong= t(@scenario.area_code)
    %dl.detail-list
      %dt Inwoners
      %dd(data-query="households_number_of_inhabitants" data-period="present") &mdash;
      %dt Woningen
      %dd(data-query="households_number_of_residences" data-period="present") &mdash;
      %dt Energiegebruik gebouwde omgeving
      %dd(data-query="factsheet_share_households_buildings_in_total_demand" data-period="present") &mdash;
    .logos
      = image_tag('factsheet/over-morgen.png', style: 'width: 6rem')
      %br<>
      %span.date
        = l(Date.today, format: :long)
  %main
    %section.main
      #summary.panel
        %h2
          %span.note
            Besparing
            %span(data-query="factsheet_total_demand_relative_change" data-as="%") &mdash;
            %br<>
            %span.small(data-query="factsheet_total_demand_absolute_change") &mdash;
          1. Energievraag (eindgebruik) naar drager en sector
        .content
          .charts.column
            .chart.present
            .chart.future
          %dl.carriers.column
            %dt.oil Olie en kolen
            %dd.oil(data-query="factsheet_energetic_final_demand_oil_and_coal_products" data-no-unit data-precision="0") &mdash;

            %dt.biofuel Biomassa en -brandstof
            %dd.biofuel(data-query="factsheet_energetic_final_demand_bio_fuels" data-no-unit data-precision="0") &mdash;

            %dt.gas Gas gebouwde omgeving
            %dd.gas(data-query="factsheet_energetic_final_demand_gas_households_buildings" data-no-unit data-precision="0") &mdash;

            %dt.gas-other Gas overige (o.a. industrie)
            %dd.gas-other(data-query="factsheet_energetic_final_demand_gas_other" data-no-unit data-precision="0") &mdash;

            %dt.collective-heat Collectieve warmte
            %dd.collective-heat(data-query="factsheet_energetic_final_demand_collective_heat" data-no-unit data-precision="0") &mdash;

            %dt.renewable-heat Zonthermie
            %dd.renewable-heat(data-query="factsheet_energetic_final_demand_renewable_heat" data-no-unit data-precision="0") &mdash;

            %dt.electricity Elektriciteit
            %dd.electricity(data-query="factsheet_energetic_final_demand_electricity" data-no-unit data-precision="0") &mdash;

            %dt.total Total
            %dd.total(data-query="factsheet_total_demand" data-precision="0") &mdash;
      #carrier-use.panel
        %h2
          2. Energieaanbod naar drager
          (
          %span(data-query="graph_year" data-as="#")<> &mdash;
          )
        .content
          .chart
          .legend
            %table
              %tbody
              %tfoot
                %tr
                  %td.key Totaal
                  %td.value(data-query="factsheet_total_supply") &mdash;
    %section.breakdown
      %h2
        3. Energieaanbod
        (
        %span(data-query="graph_year" data-as="#")<> &mdash;
        )
      .row
        .panel.wind
          %h3 Wind
          .value(data-query="electricity_produced_from_wind") &mdash;
          %ul
            %li
              %span(data-query="factsheet_number_of_wind_turbine_inland_coastal") &mdash;
              windmolens op land
            %li
              %span(data-query="factsheet_installed_capacity_of_wind_turbine_inland_coastal" data-as="MW") &mdash;
              opgesteld vermogen
            %li.spacer
              %span(data-query="factsheet_supply_electricity_from_other") &mdash;
              restopgave
        .panel.solar
          %h3 Zon
          .value(data-query="factsheet_supply_of_solar_total") &mdash;
          %ul
            %li
              %span(data-query="factsheet_number_of_solar_pv" data-precision="-3") &mdash;
              PVÂ­-panelen op daken
            %li
              %span(data-query="factsheet_solar_pv_plants_land_use") &mdash;
              hectare zonneveld
            %li
              %span.icon.solar-pv
            %li
              %span(data-query="factsheet_installed_capacity_of_solar_pv" data-as="MW") &mdash;
              opgesteld vermogen
            %li.right<>
              %span.icon.solar-thermal
            %li.spacer
              
              %span(data-query="factsheet_number_of_water_heater_solar_thermal" data-precision="-3") &mdash;
              zonnecollectoren
      .row
        .panel.collective-heat
          %h3 Collectieve Warmte
          .value(data-query="factsheet_demand_of_collective_heat") &mdash;
          %ul
            %li.spacer
              %span(data-query="factsheet_installed_capacity_of_collective_heat_sources")
              opgesteld vermogen
              %br
              %span(data-query="factsheet_demand_of_collective_heat_per_residence" data-precision="-3" data-no-unit)
              woningequivalenten
            %li
              Geothermie
              (
              %span(data-query="factsheet_share_of_geothermal_in_collective_heat_sources")<> &mdash;
              )
            %li
              Restwarmte
              (
              %span(data-query="factsheet_share_of_waste_heat_in_collective_heat_sources")<> &mdash;
              )
            %li
              LT bronnen
              (
              %span(data-query="factsheet_share_of_local_chps_in_collective_heat_sources")<> &mdash;
              )
        .panel.heat
          %h3 Individuele Warmte
          .value(data-query="factsheet_demand_of_individual_heat_total") &mdash;
          %ul
            %li
              Elektrisch verwarmen
              %span(data-query="factsheet_share_all_electric_in_individual_heat") &mdash;
          .solar-arrow
            .tail
            .head
            .quantity(data-query="factsheet_share_solar_thermal_in_individual_heat" data-precision="0") &mdash;
          .biomass-arrow
            .quantity(data-query="factsheet_share_biomass_in_individual_heat" data-precision="0") &mdash;
            .heat
            .tail
      .row
        .panel.renewable-gas
          %h3 Hernieuwbaar Gas
          .value(data-query="factsheet_demand_of_gas_total") &mdash;
          %ul.has-icons
            %li
              Aardgas
              (
              %span(data-query="factsheet_share_natural_gas_in_total_gas")<> &mdash;
              )
              %span.icon.natural-gas
            %li
              Biogas
              (
              %span(data-query="factsheet_share_greengas_in_total_gas")<> &mdash;
              )
              %span.icon.biogas
            %li
              Power to gas
              (
              %span(data-query="factsheet_share_hydrogen_in_total_gas")<> &mdash;
              )
              %span.icon.power-to-gas
        .panel.biomass
          %h3 Biomassa
          .value(data-query="factsheet_demand_of_biomass_total") &mdash;
          %ul.has-icons
            %li
              Bijstook biomassa
              %span.icon.biomass-heat(data-query="factsheet_demand_of_biomass_in_households_and_buildings") &mdash;
            %li
              Transport
              %span.icon.biomass-transport(data-query="final_demand_of_biomass_products_in_transport") &mdash;
